<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>SimpanNasabahServlet</servlet-name>
        <servlet-class>com.artivisi.endy.belajar.jee.banking.servlet.SimpanNasabahServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DaftarNasabahServlet</servlet-name>
        <servlet-class>com.artivisi.endy.belajar.jee.banking.servlet.DaftarNasabahServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>KirimJMSServlet</servlet-name>
        <servlet-class>com.artivisi.endy.belajar.jee.banking.servlet.KirimJMSServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SimpanNasabahServlet</servlet-name>
        <url-pattern>/servlet/nasabah/simpan</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DaftarNasabahServlet</servlet-name>
        <url-pattern>/servlet/nasabah/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>KirimJMSServlet</servlet-name>
        <url-pattern>/kirimjms</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
